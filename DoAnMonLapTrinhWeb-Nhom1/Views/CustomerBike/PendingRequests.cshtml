@model DoAnMonLapTrinhWeb_Nhom1.ViewModels.UserViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Pending Requests</title>
</head>
<body>
    <h1>Pending Requests</h1>

    <table>
        <thead>
            <tr>
                <th>Request ID</th>
                <th>Requested Date</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model.PendingRequests)
            {
                <tr>
                    <td>@request.ID</td>
                    <td>@request.RequestedDate</td>
                    <td>@request.StartDate</td>
                    <td>@request.EndDate</td>
                    <td>
                        <a href="@Url.Action("DeleteRequest", "CustomerBike", new { requestId = request.ID })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
